<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentLayoutProductCell"
        style="@style/ProductCellContentLayout"
        android:background="@drawable/black_rectangle">

        <ImageView
            android:id="@+id/imageViewProductCell"
            style="@style/ProductCellImgView"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/gradient_black_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewProductName"
                style="@style/ProductNameTxtView" />

            <TextView
                android:id="@+id/textViewProductDescription"
                style="@style/ProductDescriptionTxtView" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>