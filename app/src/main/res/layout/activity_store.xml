<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreActivity">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                style="@style/StoreDetailsImageView"
                android:id="@+id/imgViewStoreDetails"
                android:background="@drawable/black_background" />

            <TextView
                style="@style/StoreAddressTextView"
                android:id="@+id/txtViewStoreAddress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewStoreZipcode"
                    style="@style/StoreZipcodeTextView" />

                <TextView
                    android:id="@+id/txtViewStoreCity"
                    style="@style/StoreCityTextView" />
            </LinearLayout>

            <TextView
                style="@style/StoreDescriptionTextView"
                android:id="@+id/txtViewStoreDescription" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>